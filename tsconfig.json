{
  "compilerOptions": {
    "module": "commonjs",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": [
      "ES2022"
    ],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~": ["src/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
