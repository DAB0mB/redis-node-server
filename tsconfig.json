{
  "compilerOptions": {
    "module": "commonjs",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": [
      "ES2022"
    ],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "~/*": ["*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
